<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.RunFragment"
    android:weightSum="21"
    android:paddingBottom="40dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        <ImageView
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/app_bar"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/run_text"
            android:layout_gravity="center"
            />
    </FrameLayout>

    <com.google.android.gms.maps.MapView
        android:layout_weight="14"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/routeButton"
            style="@style/Button.Circle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/startButton"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="@string/ROUTE"
            android:textSize="12sp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="90dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

        <ImageButton
            android:id="@+id/startButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/start_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/guidanceButton"
            style="@style/Button.Circle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toEndOf="@+id/startButton"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="@string/GUIDANCE"
            android:textSize="12sp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="90dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
</LinearLayout>
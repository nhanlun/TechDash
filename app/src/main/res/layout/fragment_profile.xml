<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id = "@+id/energyicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src = "@drawable/energyicon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/energyicon"
            android:layout_centerVertical="true"
            android:text="145"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="normal"
            />
        <ImageButton
            android:id="@+id/shopButton"
            android:src="@drawable/shopicon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/achievementButton"
            />
        <ImageButton
            android:id="@+id/achievementButton"
            android:src="@drawable/achievementicon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:src="@drawable/character"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/avatar"
            android:text = "Tráº§n Anh Duy"
            android:textSize="40dp"
            />
    </RelativeLayout>
</LinearLayout>
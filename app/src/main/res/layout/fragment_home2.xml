<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/energyicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/energyicon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvEnergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="145"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@+id/energyicon"
        app:layout_constraintRight_toLeftOf="@+id/shopButton"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/energyicon"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />
    <ImageButton
        android:id="@+id/shopButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/white"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/shopicon"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toLeftOf="@+id/achievementButton"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/achievementButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@color/white"
        android:padding="10dp"
        android:paddingRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/achievementicon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="342dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginTop="4dp"/>
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/character"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="1"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="117dp"
        app:layout_constraintTop_toBottomOf="@+id/shopButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvUserName"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tráº§n Anh Duy"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="679dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/logout_button"
        app:layout_constraintVertical_bias="0.5"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:layout_marginBottom="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>